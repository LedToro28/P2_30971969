<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
</head>
<body>
    <%- include('../partials/header.ejs')%>
    <main>
        <section class="section">
            <div class="container">
                <h2><%= pageTitle %></h2>
        
                <% if (contacts && contacts.length > 0) { %>
        
                    <div class="table-responsive d-none d-lg-block">
                        <table class="table table-striped table-bordered table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre</th>
                                    <th>Email</th>
                                    <th class="comment-column">Comentario</th>
                                    <th>IP</th>
                                    <th>Fecha</th>
                                </tr>
                            </thead>
                            <tbody>
                                    <% contacts.forEach(contact => { %>
                                        <tr>
                                            <td><%= contact.id %></td>
                                            <td><%= contact.name %></td>
                                            <td><%= contact.email %></td>
                                            <td class="comment-column"><%= contact.comment %></td>
                                            <td><%= contact.ip_address %></td>
                                            <td><%= contact.created_at %></td>
                                        </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
        
                    <div class="contact-list-mobile d-lg-none">
                         <% contacts.forEach(contact => { %>
                            <div class="contact-block mb-3 p-3">
                                <div class="row mb-2">
                                    <div class="col-5"><strong class="contact-label">ID:</strong></div>
                                    <div class="col-7 contact-value"><%= contact.id %></div>
                                </div>
                                 <div class="row mb-2">
                                    <div class="col-5"><strong class="contact-label">Nombre:</strong></div>
                                    <div class="col-7 contact-value"><%= contact.name %></div>
                                </div>
                                 <div class="row mb-2">
                                    <div class="col-5"><strong class="contact-label">Email:</strong></div>
                                    <div class="col-7 contact-value"><%= contact.email %></div>
                                </div>
                                 <div class="row mb-2">
                                    <div class="col-5"><strong class="contact-label">Comentario:</strong></div>
                                    <div class="col-7 contact-value"><%= contact.comment %></div>
                                </div>
                                 <div class="row mb-2">
                                    <div class="col-5"><strong class="contact-label">IP:</strong></div>
                                    <div class="col-7 contact-value"><%= contact.ip_address %></div>
                                </div>
                                 <div class="row">
                                    <div class="col-5"><strong class="contact-label">Fecha:</strong></div>
                                    <div class="col-7 contact-value"><%= contact.created_at %></div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
        
                <% } else { %>
                    <p>Aun no hay contactos registrados.</p>
                <% } %>
            </div>
        </section>
    </main>
    <%- include('../partials/footer.ejs')%>
</body>
</html>